<h2>Actors</h2>

<div class = "search">
    <%= search_form_for @q do |f| %>
      <p>
        <%= f.label :name_cont %> 
        <%= f.text_field :name_cont %>

      </p>
      <p>
          <%= f.submit %> 
      </p>

  <% end %>

<ul>
  <% @actors.each do |actor| %>
    <li>
     
        <a href="<%= actor_path(actor) %>"><%= actor.name %></a>
      </li>
  
    
  <% end %>
</ul>

    
