<!DOCTYPE html>
<html>
<head>
  <title>MovieApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="user_details">
 <% if current_user %>
       <div class="loginstatus loggedin">       
        Hello, <%= current_user.email %> 
        <%= link_to 'logout', session_path(0), method: :delete %>
        <%= link_to 'your_movie_page', user_path(current_user) %>
        </div>
      <% else %>
      <div class="loginstatus loggedout"> 
        <%= link_to 'Sign in', new_session_path %>
        <%= link_to 'Sign up', new_user_path %>
        </div>
      <% end %>
</div>


<nav>
  <a href="<%= movies_path %>">List all movies</a>
  <a href="<%= new_movie_path %>">Add a movie</a>
  <a href="<%= actors_path %>">List actors</a>
  
</nav>

<main>
<%= yield %>
</main>
</body>
</html>
