<div class='login'>
<%= form_tag sessions_path do %>

      <div class="actions">
      <%= submit_tag "Log In" %>
      </div>

      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      
<% end %>
</div>