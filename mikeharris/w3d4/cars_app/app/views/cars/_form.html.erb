<%= form_tag(path) do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field(:car,:name) %>
  <%= label_tag(:colour, "Colour:") %>
  <%= text_field(:car,:colour) %>
  <%= label_tag(:max_speed, "Max speed:") %>
  <%= text_field(:car,:max_speed) %>

  <% engines_array =  Engine.all.map { |engine| [engine.fuel.to_s + " " +engine.size.to_s + "l", engine.id] } %>

  <%= select_tag "car[engine_id]", options_for_select(engines_array) %>

  <%= submit_tag("Submit") %>

<% end %>


