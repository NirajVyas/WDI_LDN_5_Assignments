<h1>Ingredients</h1>

<div class='add'><a href="/ingredients/new">Add a New Ingredient</a></div>

<table>
	<tr>
		<th>Name</th>
	</tr>
	<% @ingredients.each do |ingredient| %>
	<tr>
		<td><%= ingredient.name %></td>
		<% if can? :update, ingredient %>
		<td><%= link_to 'Delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	</tr>	
	<% end %>
</table>