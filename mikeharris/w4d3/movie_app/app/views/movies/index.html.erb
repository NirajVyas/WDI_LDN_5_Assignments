<div class = "search">
    <%= search_form_for @q do |f| %>
      <p>
        <%= f.label "Movie title contains:" %> 
        <%= f.text_field :title_cont %>

      </p>
      <p>
          <%= f.submit %> 
      </p>

  <% end %>




