<%= form_for(@recipe) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :serving_size %><br />
    <%= f.text_field :serving_size %>
  </div>
  <div class="collection">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, Category.all.map{ |category| [[category.name].to_sentence, category.id] } %>
  </div>
 


  <div class="actions">
    <%= f.submit %>
  </div>


<% end %> 
