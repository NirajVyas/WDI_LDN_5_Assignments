<h2>A list of available cars</h2>

<table>
  <tbody>
    <thead>
      <td>
        Make
      </td>
      <td>
        Model
      </td>
      <td>
        Year
      </td>
      <td>
        Mileage
      </td>
      <td>
        Description
      </td>
      <td>
        &nbsp
      </td>
      <td>
        &nbsp
      </td>
    </thead>
    <% @cars.each do |car| %>
    <tr>
      <td>
        <%= car.make %>
      </td>
      <td>
        <%= car.model %>
      </td>
      <td>
        <%= car.year %>
      </td>
      <td>
        <%= car.mileage %>
      </td>
      <td>
        <%= car.description %>
      </td>
      <td>
        <%= button_to 'Edit', edit_car_path(car), method: 'get' %>
      </td>
      <td>
        <%= button_to 'Delete', car_delete_path(car), method: 'delete' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>