<h1><%= @car.name %></h1>

<% if @car.image.blank? %>
  <em>No image for this car yet.</em>
<% else %>
  <img src="<%=@car.image%>" alt = "Picture of <%=@car.name%>" width=750px />
<% end %></br>

Make: <%=@car.make%></br>
Value: <%=@car.value%></br>
Engine: <%=@car.engine.name if @car.engine %></br>
Year: <%=@car.year%></br>
Description: <%=@car.description%>

<%=button_to 'Edit', edit_car_path(@car), method:'get' %>
  <%=button_to 'Delete', car_delete_path(@car), method: 'delete'%>

