<!DOCTYPE html>
<html>
<head>
  <title>Movies</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, message| %>
   <div class="flash-message flash-message-<%= name %>">
    <%= message %>
   </div>
<% end %>


<header>
  <%= search_form_for @q do |f| %>
  <%= f.label :name_or_categories_name_cont %>
  <%= f.text_field :name_or_categories_name_cont %>
  <%= f.submit %>
  <% end %>
  <ul>
    <li><%= link_to "Sign Up", users_path %></li>
    <% if current_user %>
        Hello, <%= current_user.email %>
        <%= link_to 'Sign Out', session_path(0), method: :delete %>
      <% else %>
      <li><%= link_to "Sign In", new_session_path %></li>
      <% end %>
  </ul>
</header>


<ul>
  <li><%= link_to "Available Movies", movies_path %></li>
  <li><%= link_to "New Movie" , new_movie_path %></li>
  <li><%= link_to "Available Categories", categories_path %></li>
  <li><%= link_to "New Category" , new_category_path %></li>
  <li><%= link_to "Available Actors", actors_path %></li>
  <li><%= link_to "New Actor" , new_actor_path %></li>
</ul>

<%= yield %>

</body>
</html>
