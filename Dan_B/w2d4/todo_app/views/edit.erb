<h3>Edit your SimplyDo.it</h3>

<% @todos.each do |todo| %>
<div class='list_todo' id='edit_div'>
<section id='edit_todo'>
  <form action='/post/<%= todo['id'] %>' method='post'>

    <p><small>ID: <%= todo['id'] %> | Created on: <%= (todo['created_on']).t_format %>
    <% if todo['updated_on'] %>
     | Updated on: <%= (todo['updated_on']).t_format %>
    <% end %></small></p>
  
    <input type='text' name='title' placeholder='Title' value='<%= todo['title'] %>' autofocus>
    <h6>Deadline:</h6>
    <input type='date' name='deadline' min='2014-04-10' value='<%= todo['deadline'] %>'>
    <select name='status' class='form-control'>
      <option value='Backlog' <% if todo['status']=='Backlog' %>selected='selected'<% end %> >Backlog</option>
      <option value='Current Sprint' <% if todo['status']=='Current Sprint' %>selected='selected'<% end %> >Current Sprint</option>
      <option value='Completed' <% if todo['status']=='Completed' %>selected='selected'<% end %> >Completed</option>
    </select>
    <textarea name='description' class='description_input' placeholder='Description' rows=3  cols=20 ><%= todo['description'] %></textarea>
    <button class='btn btn-success'>Save</button>
  </form>
</section>
</div>
<% end %>