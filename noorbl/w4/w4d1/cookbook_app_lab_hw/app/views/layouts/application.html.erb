

<!DOCTYPE html>
<html>
<head>
  <title>My CookBook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
  <div id = "left-banner"></div>
  <div id = "main" >
    <h1> Welcome to my CookBook</h1>
    <h3>

     <nav>
      <ul>
        <li>
            <% if current_user %>
              hello, <%= current_user.email %>
              <%= button_to 'logout', session_path(0), method: :delete %>
            <% else %>
              <%=link_to 'login', new_session_path %>
            <% end %>
          </li>
        <li>
          <%= link_to "All Recipes", recipes_path %> * <%= link_to "Add Recipe", new_recipe_path %>
        </li>
        <li>
          <%= link_to "All Categories", categories_path %> * <%= link_to "Add Category", new_category_path %>
        </li>
        <li>
          <%= link_to "All Ingredients", ingredients_path %> * <%= link_to "Add Ingredient", new_ingredient_path %>
        </li>
        <li>
            <%=link_to 'users', users_path %>
          </li>

        </ul>
      </nav>
    </h3>
   
<%= yield %>
</div>
<div id = "right-banner"></div>
</body>
<footer> Noor for General Assembly</footer>
</html>