<div class="portfolios">

<dl>
  <dt>
    <h2><label for='portfolio_name'>Name:</label></h2>
  </dt>
  <dd>
    <input id='portfolio_name' type='text' name='portfolio[name]' value='<%=@portfolio.name %>' autofocus required>
  </dd>
</dl>

<dl>
  <dt>
    <h2><label for='portfolio_description'>Description:</label></h2>
  </dt>
  <dd>
    <textarea id='portfolio_description' name='portfolio[description]' required><%=@portfolio.description %></textarea>
  </dd>
</dl>

<dl>
  <dt>
    <h2><label for='portfolio_category_id'>Category:</label></h2>
  </dt>
  <dd>
    <select id='portfolio_category_id' name='portfolio[category_id]'required>
      <% @categories.each do |category| %>
        <option value='<%= category.id %>' <% if @portfolio.category_id==category.id %>selected='selected'<% end %> >
          <%= category.name %>
        </option>
      <% end %>
    </select>
  </dd>
</dl>

</div>

<div class='clear_both'></div>