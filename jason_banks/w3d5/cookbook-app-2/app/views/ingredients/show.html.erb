<h2><%= @ingredient.name %></h2>
<% if @recipes.any? %>
  <h4>Recipes</h4>
  <ul>
    <% @recipes.each do |recipe| %>
      <li><%= link_to recipe.title, recipe_path(recipe) %> (<span class="italics"><%= recipe.category.name %></span>)</li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Add a Recipe", new_recipe_path %>
<br />
<br />
<%= link_to "Edit", edit_ingredient_path(@ingredient) %>
<br />
<br />
<%= link_to "Delete", delete_ingredient_path(@ingredient), method: "post", confirm: "Delete \"#{@ingredient.name}?\"" %>
