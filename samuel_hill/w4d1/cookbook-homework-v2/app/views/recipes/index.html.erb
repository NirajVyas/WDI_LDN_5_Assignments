<h1>Recipes</h1>

<div class='add'><%= link_to 'Add a New Recipe', new_recipe_path %></div>

<table>
	<tr>
		<th>Name</th>
		<th>Actions</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr>
		<td><%= recipe.name %></td>
		<td><%= link_to 'Show', recipe_path(recipe) %></td>
		<% if can? :update, recipe %>
			<td><%= link_to'Edit', edit_recipe_path(recipe) %></td>
			<td><%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	</tr>	
	<% end %>
</table>
