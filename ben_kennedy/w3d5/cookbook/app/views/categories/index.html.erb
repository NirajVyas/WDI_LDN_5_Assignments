<h1>The Categories index:</h1>
<p><%= link_to 'Add Category', new_category_path %></p>

  <table>
    <thead>
      <td>Name</td>
    </thead>
    <% @categories.each do |category| %>
    <tr>
      <td>
        <%= category.name %>
      </td>
      <td>
        <%= button_to 'Edit', edit_category_path(category.id), method: "get" %>
      </td>
      <td>
        <%= button_to 'Delete', category_delete_path(category.id), method: "delete" %>
      </td>      
    </tr>
    <% end %>
  </table>

