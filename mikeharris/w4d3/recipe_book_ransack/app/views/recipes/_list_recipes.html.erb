<% recipes = @recipes.where(category_id: category_id) %>
  <table>
  <% recipes.each do |recipe| %>

    <tr>

      <td><a href="<%= recipe_path(recipe) %>"><%= recipe.name %></a></td>
    <% if can? :update, recipe %>
      <td><%= button_to 'Delete', recipe_path(recipe), :method => :delete %></td>
      <td><%= button_to 'Edit', edit_recipe_path(recipe), :method => :get %></td>
    <% end %>
    </tr>

  <% end %>
  </table>

  

