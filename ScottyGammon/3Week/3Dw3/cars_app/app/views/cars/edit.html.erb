<h2>EDIT CAR</h2>

<%= form_for(@car) do |f| %>

  <div class="field">
    <%= f.label :make %><br />
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  <div class="actions">
    <%= f.submit %>
  </div>
   <div class="field">
     <%= f.label :engine_id, 'Engine' %><br />
    <%= f.select :engine_id, Engine.all.map { |e| [[e.cylinders].to_sentence, e.id] } %>
  </div>
<% end %>