<h2>Categories#index</h2>
<% if @categories %>
  <ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %> <%= image_tag("#{category.image}") if category.image > "" %></li>
  <% end %>
  </ul>
<% end %>
<br />
