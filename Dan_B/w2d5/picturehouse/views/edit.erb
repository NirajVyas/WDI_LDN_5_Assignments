<div class='list_vids'>
<h4>Edit your PictureHouse entry!</h4>

<% @movies.each do |movie| %>
<div>
<section id='new_vid'>
  <form action='/post/<%=  movie['id'] %>' method='post'>
    <input type='text' name='title' placeholder='Title' maxlength='100' value='<%= movie['title'] %>' autofocus required>
    <h6>Category:</h6>
    <select name='category' class='form-control'>
      <option value='Inspiring' <% if movie['category']=='Inspiring' %>selected='selected'<% end %> >Inspiring</option>
      <option value='Humour' <% if movie['category']=='Humour' %>selected='selected'<% end %> >Humour</option>
      <option value='Popular Culture' <% if movie['category']=='Popular Culture' %>selected='selected'<% end %> >Popular Culture</option>
      <option value='Music' <% if movie['category']=='Music' %>selected='selected'<% end %> >Music</option>
      <option value='Sports' <% if movie['category']=='Sports' %>selected='selected'<% end %> >Sports</option>
      <option value='Other' <% if movie['category']=='Other' %>selected='selected'<% end %> >Other</option>
    </select>
    <br>
    <input type='url' name='url' placeholder='Your YouTube URL here.' maxlength='100' value='<%= movie['url'] %>' required>
    <br>
    <textarea name='description' class='description_input' placeholder='Description' rows=3  cols=20 ><%= movie['description'] %></textarea>
    <br>
    <button class='btn btn-success'>Save</button>
  </form>
</section>
</div>
</div>
<% end %>