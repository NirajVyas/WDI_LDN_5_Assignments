<%= form_for(@f1car) do |f| %>
 

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :driver %><br />
    <%= f.text_field :driver %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :engine %><br />
    <%= f.collection_select :engine_id, Engine.all, :id, :name_for_select  %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>