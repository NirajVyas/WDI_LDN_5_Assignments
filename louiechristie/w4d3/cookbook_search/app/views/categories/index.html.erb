<h2>Categories</h2>

<table>
  <thead>
   <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to(category.name, category_path(category.id)) %></td>
      <td><%= link_to('Edit', edit_category_path(category.id)) %></td>
      <td><%= link_to('Delete', category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
    </tr>
  </tbody>
  <% end %>
 
</table>
<br/>
<p><%= link_to('New Category',new_category_path) %></p>
