<form action='/calculator' method='get'>
  first: <input type='text' name='first'>
  operator: <select name='operator'>
  <option value="+">+</option>
  <option value="-">-</option>
  <option value="*">*</option>
  <option value="/">/</option>
  second: <input type='text' name='second'>
  <button>calculate!</button>
</form>

  <% if @result %>
    <section>
      <header>
        <h1>Result of Calculation</h1>
      </header>
      <p>The result of <%=@first %> <%=@operator%> <%= @second %> is <%=@result %> </p>
  <% end %>