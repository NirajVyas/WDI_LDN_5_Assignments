<h2>Movies</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th></th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.year %></td>
          <td><%= link_to("Show", movie_path(movie.id)) %></td>
          <td><%= link_to("Edit", edit_movie_path(movie.id)) %></td>
          <td><%= link_to('Delete', movie_path(movie.id), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>