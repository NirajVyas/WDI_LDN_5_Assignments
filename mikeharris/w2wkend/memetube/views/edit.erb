<h2>Please edit your video:</h2>


<div class="editvideo">
      <h3> <%= @users_videos["title"] %> </h3>
      <p>  <%= @users_videos["description"] %> </p>    
      <iframe width="560" height="315" src="//www.youtube.com/embed/<%= @users_videos["url"] %>" frameborder="0" allowfullscreen></iframe>
</div>



<form action='/update/<%= @users_videos["id"] %>' method='post'>
  <table>
    <tr>
      <td>Title</td>
      <td><input type='text' name='title' autofocus value="<%= @users_videos["title"] %>"></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><textarea rows=3  cols=20  name='description' value="<%= @users_videos["description"] %>"><%= @users_videos["description"] %></textarea></td>
  </tr>
  <tr>
      <td>URL</td>
      <td><input type='text' name='url' value="<%= @users_videos["url"] %>"><% @users_videos["url"] %></td>
  </tr>
  <tr>
      <td>Genre</td>
      <td><input type='text' name='genre' value = "<%= @users_videos["description"] %>" ></td>
  </tr>


  <tr>
    <td></td>
    <td><button>Submit</button></td>
  </tr>
  </table>


</form>

