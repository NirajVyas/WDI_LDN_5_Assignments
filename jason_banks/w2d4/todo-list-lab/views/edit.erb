<h2>Edit the item below:</h2>
<% @todo.each do |todo| %>
  <form action="/update/<%= todo['id'] %>" method="post">
    Item: <input type="text" name="item" value="<%= todo['item'] %>" autofocus>
    Description: <input type="text" name="description" value="<%= todo['description'] %>" autofocus>
    <button>Submit</button>
  </form>
<% end %>
