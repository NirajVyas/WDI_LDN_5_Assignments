<form action='/basic' method='get'>
  First: <input type='number' step ="any" name='first'>
  Operator: <select name='operator'>
  <option value="+">+</option>
  <option value="-">-</option>
  <option value="*">*</option>
  <option value="/">/</option>
  Second: <input type='number' step="any" name='second'>
  <button>Calculate!</button>

</form>

<% if @result %>
  <section>
    <h1>Results</h1>
    <p>
      The result is <%= @result %>. 
      <% if @result % 2 == 0 && @result != 0 %>
      Even steven.
      <% elsif @result.is_a? Fixnum %>
      The odds are good, but the goods are odd.
      <% else %>
      <% end %>
    </p>
  </section>
<% end %>