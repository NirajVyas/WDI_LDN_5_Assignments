<h1>Create an Account</h1>

    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

<%= form_for @user do |f| %>

  <%= render partial: 'form', locals: { f: f } %>

  <%= f.submit 'Create Account' %>

<% end %>