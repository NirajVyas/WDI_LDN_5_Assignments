<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: "80" %><br />
  Rating: 
  <%= f.radio_button :rating, "1" %>
  <%= f.label :rating, "Hated It!" %>
  <%= f.radio_button :rating, "2" %>
  <%= f.label :rating, "Meh." %>
  <%= f.radio_button :rating, "3" %>
  <%= f.label :rating, "It's OK." %>
  <%= f.radio_button :rating, "4" %>
  <%= f.label :rating, "Liked It!" %>
  <%= f.radio_button :rating, "5" %>
  <%= f.label :rating, "Loved It!" %><br />
  How Viewed: 
  <%= f.radio_button :how_viewed, "Cinema" %>
  <%= f.label :how_viewed, "Cinema" %>
  <%= f.radio_button :how_viewed, "Cable/TV" %>
  <%= f.label :how_viewed, "Cable/TV" %>
  <%= f.radio_button :how_viewed, "DVD (own)" %>
  <%= f.label :how_viewed, "DVD (own)" %>
  <%= f.radio_button :how_viewed, "DVD (rent)" %><br />
  <%= f.label :how_viewed, "DVD (rent)" %><br />
  <%= f.label :review %><br />
  <%= f.text_area :review, cols: "62", rows: "10" %><br />
  <%= submit_tag "Add Movie" %>
<% end %>
