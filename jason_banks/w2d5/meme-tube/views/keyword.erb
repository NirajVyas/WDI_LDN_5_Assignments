<% if @videos_by_keyword %>
    <h2><%= @videos_by_keyword.first['keyword'] %></h2>
  <% @videos_by_keyword.each do |video| %>
    <h3>"<%= video['title'] %>"</h3>
    <br />
    <br />
    <iframe id="ytplayer" type="text/html" width="640" height="360"
    src="https://www.youtube.com/embed/<%= video['id'] %>"
    frameborder="0" allowfullscreen />
    </iframe>
    <br />
    <br />
    <a href="/show/<%= video['id'] %>" role="button" class="btn btn-success">Details</a>
    <br />
    <br />
  <% end %>
<% end %>