<h1>Find Square Root of a Number</h1>


<form action='/root' method='get'>
  Number: <input type='text' name='number'>
  <button class="btn btn-success">Calculate</button>
</form>

  <% if @result %>
    <section>
      <header>
        <h1>Result of Calculation</h1>
      </header>
      <p>The square root of <%=@number %> is <%=@result %> </p>
  <% end %>