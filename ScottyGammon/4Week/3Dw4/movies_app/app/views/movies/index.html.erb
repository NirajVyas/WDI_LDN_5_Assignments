<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Poster</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Review</th>
    <th>Watched</th>
    <th>Image</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><img src="<%= movie.poster %></td>">
    <td><%= movie.year %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.review %></td>
    <td><%= movie.ownership %></td>
    <td><img src="<%= movie.movie_image %>"></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

