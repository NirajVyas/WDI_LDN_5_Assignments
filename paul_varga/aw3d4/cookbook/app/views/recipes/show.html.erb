<% @ingridients.each do |ingridient| %>

<table>
<tr>
  <th>Category</th>
  <th>Name</th> 
  <th>Feeds</th>
  <th>Description</th>
  <th><%= pluralize(1, 'ingredient') %></th>
</tr>
<tr>
  <td><%= link_to @recipe.category.name %></td>
  <td><%= link_to @recipe.name %></td> 
  <td><%= link_to @recipe.feeds_people %></td>
  <td><%= link_to @recipe.description %></td>
  <td><%= link_to @recipe.ingredient.name %></td>
</tr>
</table>

<% end %>

<span>
<p><%= link_to 'Edit', edit_recipe_path(@recipe) %></p>

<p><%= button_to 'Delete Recipe', recipe_delete_path(@recipe) %></p>

<p><%= link_to 'Back', recipes_path %></p>
</span>