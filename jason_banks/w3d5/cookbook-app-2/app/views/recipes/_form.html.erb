<%= form_for @recipe do |f| %>
<%= f.label :title %>
<div class="black"><%= f.text_field :title %></div>
<br /><br />
Category <div class="black"><%= f.collection_select(:category_id, @categories, :id, :name) %></div>
<br /><br />
<%= f.label :description %>
<div class="black"><%= f.text_field :description %></div>
<br /><br />
<%= f.label :prep_time %> (in months)
<div class="black"><%= f.number_field :prep_time, min: 0, step: 1 %></div>
<br /><br />
Ingredients
<br />
<div class="checkbox-list">
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li>
        <%= check_box_tag("recipe[ingredient_ids][]", ingredient.id, @recipe.ingredients.include?(ingredient)) %>
      <%= label_tag("recipe[ingredient_ids][]", ingredient.name) %>
      </li>
    <% end %>
  </ul>
</div>
<br />
<%= f.label :instructions %>
<br /><br />
<div class="black"><%= f.text_area :instructions %></div>
<br /><br />
<%= f.label :image %> URL
<div class="black"><%= f.text_field :image %></div>
<br /><br />
<div class="black"><%= submit_tag("Submit") %></div>
<% end %>
<%= link_to "Cancel", recipes_path %>




