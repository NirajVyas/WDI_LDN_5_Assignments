<!DOCTYPE html>
<html>
<head>
  <title>Cookbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav >
   <ul >
    <li>
      <% if current_user %>
        Hello, <%= current_user.email %> 
        <%= button_to 'logout', session_path(0), method: :delete %>
      <% else %>
        <%= link_to 'Login', new_session_path %>
      <% end %>
    </li>
    <li><%= link_to('Categories',categories_path) %>
      <ul class="submenu"
        <li><%= link_to('New Category',new_category_path) %></li >
      </ul>
    </li >
    <li><%= link_to('Recipes',recipes_path) %>
      <ul class="submenu"
        <li><%= link_to('New Recipe',new_recipe_path) %></li >
      </ul>
    </li >
    <li><%= link_to('Ingredients',ingredients_path) %>
      <ul class="submenu"
        <li><%= link_to('New Ingredient',new_ingredient_path) %></li >
      </ul>
    </li >
    <li><%= link_to('Users', users_path)%> </li>
   <li> 
      <%= search_form_for @q do |f| %>
        <%= f.label :name_or_ingredients_name_or_category_name_cont,"Search Recipes" %>
        <%= f.text_field :name_or_ingredients_name_or_category_name_cont %>
      <% end %>
    </li>
 </ul >

 </nav>



<div class="container">

  <h1>Online Cookbook</h1>

  <div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
  </div>

  <%= yield %>

</div>

</body>

<footer><a href="http://www.louiechristie.com">Louie Christie</a> 2014</a></footer>
</html>

