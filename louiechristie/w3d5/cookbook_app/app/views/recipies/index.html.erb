<h2>Recipies</h2>

<table>

  <% @recipies.each do |recipe| %>
  <tr>
    <td><%= link_to(recipe.name, recipe_path(recipe.id)) %></td>
    <td><%= link_to('Edit', edit_recipe_path(recipe.id)) %></td>
    <td><%= link_to('Delete', recipe, :method => :delete) %></td>
  </tr>
  <% end %>
 
</table>
