<body>

<main>
<h1><a href="/"> Mike's Cookbook</a></h1>


 <% if current_user %>
       <div class="loginstatus loggedin">       
        Hello, <%= current_user.email %> 
        <%= link_to 'logout', session_path(0), method: :delete %>
        </div>
      <% else %>
      <div class="loginstatus loggedout"> 
        <%= link_to 'Sign in', new_session_path %>
        <%= link_to 'Sign up', new_user_path %>
        </div>
      <% end %>



<nav>
  <a href="<%= new_recipe_path %>">New Recipe</a>
  <a href="<%= new_category_path %>">New Category</a>
  <a href="<%= ingredients_path %>">Manage Ingredients</a>
  <a href="<%= users_path %>">Users</a> <br />
  <a href="<%= recipes_path %>">List recipes</a>
  <a href="<%= ingredients_path %>">List ingredients</a>
</nav>
<%= yield %>
</main>
</body>
</html>
